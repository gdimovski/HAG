        #cart-table {
            
            border-collapse: collapse;
            width: 100%;
        }
        #templatemo_header_wrapper {
            height: 90px;
        }
            #cart-table td, #cart-table th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #cart-table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #cart-table tr:hover {
                opacity: 0.7;
            }

            #cart-table th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #bbd142;
                color: white;
            }
        .btn {
            background-color: #bbd142;
            color: white;
            padding: 15px 20px;
            border: none;
            cursor: pointer;
            width: 20%;
            opacity: 0.9;
        }

            .btn:hover {
                opacity: 1;
            }
            #btn_delete{
                text-decoration:none;
                color:white;
                align-content:center;
            }
    </style>


</head>
