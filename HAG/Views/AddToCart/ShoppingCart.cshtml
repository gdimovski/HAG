                <div id="dvContents">
                    <table class="table table-hover" id="cart-table" width="100%">
                        <thead>
                            <tr>
                                <th> Name </th>
                                <th> Size </th>
                                <th> Image </th>
                                <th> Price </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in list)
                            {
                                <tr>
                                    <td> @x.name </td>
                                    <td> @x.category </td>
                                    <td>
                                        <img style="max-width:50px" src="@x.image" />
                                    </td>
                                    <td> $@x.price</td>
                                    <td>

                                        <a id="btn_delete" href="@Url.Action("Remove","AddToCart",x)" class="btn btn-info btn-lg">Remove</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        @foreach (var x in list)
                        {
                            sum = Convert.ToInt32(x.price) + sum;
                        }
                        <tfoot>
                            <tr>
                                <td> </td>
                                <td> </td>
                                <td> <b> Total </b></td>
                                <td> $@sum </td>
                            </tr>
                        </tfoot>
                    </table>
                    <div id="footer">
                    </div>
                    @if (sum > 0)
                    {
                        <br/>
                        <a href="/AddToCart/OrderSuccessful">
