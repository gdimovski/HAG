                <!-- Content Area -->
                <div id="column_w530">
                    <div class="header_02">Welcome to our WEBSITE!</div>
                    <h3>Contact Form</h3>

                    <form  style="max-width:500px;margin:auto">
                        <div class="form-group">
                            <b><label>First Name:</label></b>
                        </div>

                        <div class="col-md-10">
                            <i class="fa fa-user icon"></i>
                            @Html.EditorFor(model => model.firstName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <b><label>Last Name:</label></b>
                        </div>

                        <div class="col-md-10">
                            <i class="fa fa-dollar icon"></i>
                            @Html.EditorFor(model => model.lastName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.lastName, "", new { @class = "text-danger" })
                        </div>

                        <div class=" form-group">
                            <b><label>Address:</label></b>
                        </div>

                        <div class="col-md-10">
                            <i class="fa fa-list icon"></i>
                            @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                        </div>
                        <div class=" form-group">
                            <b><label>Phone:</label></b>
                        </div>

                        <div class="col-md-10">
                            <i class="fa fa-image icon"></i>
                            @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        @{ 
                            string[] niza = { Model.lastName.ToString(),Model.address.ToString(),Model.phone.ToString() };
                        }
                       
                        <input type="submit" onclick="@Url.Action("addToSession","Clients",@niza)"  value="Submit">
                    </form>

